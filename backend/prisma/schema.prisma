// prisma/schema.prisma - Database Schema with Prisma ORM

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
}

model Image {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  imageUrl    String
  thumbnailUrl String
  
  metadata    ImageMetadata?
  position3D  Position3D?
  
  tags        String[]
  likes       Int      @default(0)
  views       Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("images")
}

type ImageMetadata {
  width       Int
  height      Int
  format      String
  size        Int
  uploadedBy  String   @default("Anonymous")
}

type Position3D {
  x           Float    @default(0)
  y           Float    @default(0)
  z           Float    @default(0)
}
